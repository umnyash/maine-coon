block variables
block data

doctype html
html.page(class= pageClass lang='ru')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='preload' href='fonts/roboto-flex-cyrillic.woff2' as='font' type='font/woff2' crossorigin)
    link(rel='preload' href='fonts/roboto-flex-latin.woff2' as='font' type='font/woff2' crossorigin)
    link(rel='preload' href='fonts/yeseva-one-400-cyrillic-latin.woff2' as='font' type='font/woff2' crossorigin)
    link(rel='stylesheet' href='css/style.min.css')
    title= title
    link(rel='icon' href='favicon.ico')
    link(rel='icon' href='img/favicons/favicon.svg' type='image/svg+xml')
    link(rel='apple-touch-icon' href='img/favicons/favicon-180.png')
    link(rel='manifest' href='manifest.webmanifest')
    meta(name='description' content='Первый питомник мейн-кунов в Новосибирске с расширенным спектром услуг')
    meta(name='keywords' content='Мейн-куны, мейн-кун это, купить мейн-куна, котята, коты, кошки, котенок мейн-кун, уход за мейн-куном, подготовка дома для мейн-куна')
  body.page__body
    include ../components/components
    .page__inner
      +site-header(class='page__site-header')
      main.page__content
        block content
      +site-footer
    script(src='js/script.min.js')
